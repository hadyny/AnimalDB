@model AnimalDB.Repo.Entities.SurgeryType

@section BackNav {
    @if (string.IsNullOrEmpty(Request["returnUrl"]))
    {
        <a class="btn btn-sm btn-secondary" href="@Url.Action("Index")"><i class="fas fa-arrow-left"></i> Back</a>
    }
    else
    {
        <a href="@Request["returnUrl"]" class="btn btn-primary">Back</a>
        <a class="btn btn-sm btn-secondary" href="@Request["returnUrl"]"><i class="fas fa-arrow-left"></i> Back</a>
    }
}

<h2>Create New Surgery Type</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.Description, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Description)
                @Html.ValidationMessageFor(model => model.Description)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Create" class="btn  btn-outline-dark" />
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
