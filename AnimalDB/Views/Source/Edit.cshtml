@model AnimalDB.Repo.Entities.Source

@section BackNav {
    <a class="btn btn-sm btn-secondary" href="@Url.Action("Index")"><i class="fas fa-arrow-left"></i> Back</a>
}

<h2>Edit Source</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.Description, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Description)
                @Html.ValidationMessageFor(model => model.Description)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Type, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <select id="Type" name="Type" class="form-control col-md-2">
                    <option></option>
                    <option value="@AnimalDB.Repo.Enums.SourceType.BreedingUnit">Breeding Unit</option>
                    <option value="@AnimalDB.Repo.Enums.SourceType.Commercial">Commercial</option>
                    <option value="@AnimalDB.Repo.Enums.SourceType.Farm">Farm</option>
                    <option value="@AnimalDB.Repo.Enums.SourceType.BornDuringProject">Born during project</option>
                    <option value="@AnimalDB.Repo.Enums.SourceType.Captured">Captured</option>
                    <option value="@AnimalDB.Repo.Enums.SourceType.ImportedIntoNZ">Imported into New Zealand</option>
                    <option value="@AnimalDB.Repo.Enums.SourceType.PublicSources">Public Sources</option>
                </select>
                @Html.ValidationMessageFor(model => model.Type)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Save" class="btn  btn-outline-dark" />
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>
    $('#Type').val('@Model.Type');
    </script>
}
