@model AnimalDB.Repo.Entities.DocumentCategory

<h3>@Html.ActionLink("Back", "Index", new { id = Model.Id }, new { @class = "btn btn-primary" })</h3>

<h3>Are you sure you want to delete this category?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

    </dl>

    @if (Model.Documents.Count() == 0 && Model.SubCatergories.Count() == 0)
    {
        using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-danger" />
                @Html.ActionLink("Cancel", "Index", null, new { @class = "btn  btn-outline-dark" })
            </div>
        }
    }
    else
    {
        <div class="alert alert-info">You cannot delete a category that contains documents or sub-categories</div>
    }
</div>
