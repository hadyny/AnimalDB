@model IEnumerable<AnimalDB.Repo.Entities.DocumentCategory>

<h2>Document Categories</h2>

@if (User.IsInRole("Administrator") || User.IsInRole("Technician"))
{
<p>
    @Html.ActionLink("Create New Category", "Create", null, new { @class = "btn btn-primary" })
    @if (Model.Count() == 0)
    {
        @Html.ActionLink("Upload New Document", "Upload", "Documents", new { returnUrl = Request.Path }, new { @class = "btn btn-primary disabled" })
    }
    else
    {
        @Html.ActionLink("Upload New Document", "Upload", "Documents", new { returnUrl = Request.Path }, new { @class = "btn btn-primary" })
    }
</p>
}
<hr />
<table class="table table-striped">
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.ActionLink("View Documents (" + item.Documents.Count() + ")", "Index", "Documents", new { id = item.Id }, new { @class = "btn btn-outline-dark " })
            </td>
            @if (User.IsInRole("Administrator") || User.IsInRole("Technician"))
            {
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-outline-dark" })
                    @Html.ActionLink("X", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                </td>
            }
        </tr>
    }

</table>
