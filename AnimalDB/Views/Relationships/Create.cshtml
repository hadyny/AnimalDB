@model AnimalDB.Models.RelationshipViewModel

<h3>
    @Html.ActionLink("Back", "Details", "Relationships", new { id = ViewBag.AnimalId }, new { @class = "btn btn-primary" })
</h3>

<h2>New Relative for @ViewBag.AnimalName</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        <div class="offset-md-2">
            @Html.ValidationSummary(true)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Parent_Id, "Parent", new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                @Html.DropDownList("Parent_Id", null, String.Empty, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Parent_Id)
            </div>
        </div>
        <div class="offset-md-3">
            <h3>OR</h3>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Child_Id, "Offspring", new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                @Html.DropDownList("Child_Id", null, String.Empty, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Child_Id)
            </div>
        </div>

        <div class="form-group">
            <div class="offset-md-2 col-md-10">
                <input type="submit" value="Create" class="btn  btn-outline-dark" />
            </div>
        </div>
    </div>
}


@section scripts {
<script type="text/javascript">
      $(document).ready(function(){
          $('select').select2({
              allowClear: true
          });
      });
</script>
}