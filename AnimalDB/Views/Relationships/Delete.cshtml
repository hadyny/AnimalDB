@model AnimalDB.Models.RelationshipViewModel

<h3>
    @Html.ActionLink("Back", "Details", "Relationships", new { id = ViewBag.AnimalId }, new { @class = "btn btn-primary" })
</h3>

<h2>Delete</h2>

<h3>Are you sure you want to delete this Relationship?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Parent)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Parent.UniqueAnimalId)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Child)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Child.UniqueAnimalId)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn  btn-outline-danger" />
        </div>
    }
</div>

