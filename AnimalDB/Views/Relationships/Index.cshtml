@model IEnumerable<AnimalDB.Repo.Entities.Animal>

@{
    ViewBag.Title = "Index";
}

@section BackNav {
    <a class="btn btn-sm btn-secondary" href="@Url.Action("Index", "Home")"><i class="fas fa-arrow-left"></i> Animals</a>
}

<h2>Relationships</h2>


<form method="get" class="form-horizontal">

    <div class="form-group row">
        @Html.Label("id", "Scan or enter Animal Id", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="text" class="form-control" name="id" />
            @Html.ValidationSummary(true)
        </div>
    </div>

    <div class="form-group row">
        <div class="offset-md-2 col-md-10">
            <input type="submit" value="Show Relatives" class="btn  btn-outline-dark" />
        </div>
    </div>
</form>

<hr />