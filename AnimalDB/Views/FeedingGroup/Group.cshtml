@model AnimalDB.Models.CreateGroupViewModel

@section BackNav {
    <a class="btn btn-sm btn-secondary" href="@Url.Action("Index")"><i class="fas fa-arrow-left"></i> Back to Feeding Groups</a>
}

<h2>Grouping for feeding group @Model.Description</h2>
@Html.ActionLink("Edit Sub-Groups", "Index", "Group", new { id = Model.Id }, new { @class = "btn  btn-outline-dark" })

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(m => m.Id)
        @Html.HiddenFor(m => m.Description)


        @Html.EditorFor(m => m.AnimalGroups)


        <div class="form-group">
            <div>
                <input type="submit" value="Save" class="btn  btn-outline-dark" />
            </div>
        </div>
    </div>
}