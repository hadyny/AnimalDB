@model AnimalDB.Models.CreateGroupViewModel

<h3>
    @Html.ActionLink("Back", "Index", null, new { @class = "btn btn-primary" })
</h3>

<h2>Grouping for feeding group @Model.Description</h2>
@Html.ActionLink("Edit Groups", "Index", "Group", new { id = Model.Id }, new { @class = "btn  btn-outline-dark" })

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(m => m.Id)
        @Html.HiddenFor(m => m.Description)


        @Html.EditorFor(m => m.AnimalGroups)


        <div class="form-group">
            <div>
                <input type="submit" value="Save" class="btn  btn-outline-dark" />
            </div>
        </div>
    </div>
}