@model IEnumerable<AnimalDB.Repo.Entities.GDTimeline>

<h3>
    @Html.ActionLink("Back", "Index", "Admin", null, new { @class = "btn btn-primary" })
</h3>

<h2>GD Timelines</h2>

<p>
    @Html.ActionLink("Create New GD Timeline", "Create", null, new { @class = "btn btn-outline-dark " })
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Offset)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderBy(m => m.Description))
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Offset)
                </td>
                <td>
                    @Html.ActionLink("View/Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-outline-dark " })
                    @{
                        var unused = ViewBag.unused as List<string>;
                        if (unused.Contains(item.Description))
                        {
                        @Html.ActionLink("X", "Delete", new { id = item.Id }, new { @class = "btn btn-danger " })
                        }
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
