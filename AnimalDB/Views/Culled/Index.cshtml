@model IEnumerable<AnimalDB.Repo.Entities.Animal>

@section BackNav {
    <a class="btn btn-sm btn-secondary" href="@Url.Action("Index", new { id = "" })"><i class="fas fa-arrow-left"></i> Select year</a>
}

<h2>Deceased Animals from @ViewBag.Year</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UniqueAnimalId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ArrivalDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BirthDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DeathDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CauseOfDeath)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.UniqueAnimalId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ArrivalDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BirthDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeathDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CauseOfDeath)
            </td>
            <td>
                @Html.ActionLink("View", "Details", new { id = item.Id, returnUrl = Url.Action() }, new { @class = "btn  btn-outline-dark" })
                @if (User.IsInRole("Administrator"))
                {
                    @Html.ActionLink("Resurrect", "Resurrect", "Animals", new { id = item.Id }, new { @class = "btn btn-outline-danger" })
                }
            </td>
        </tr>
    }

</table>
