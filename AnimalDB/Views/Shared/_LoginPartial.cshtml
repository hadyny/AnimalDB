@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right form-inline" }))
    {
        @Html.AntiForgeryToken()
        <a class="btn btn-sm btn-outline-secondary" href="javascript:document.getElementById('logoutForm').submit()">Log off</a>
    }
}
