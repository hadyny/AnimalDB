@model AnimalDB.Repo.Entities.CageLocation


@section BackNav {
    @if (string.IsNullOrEmpty(Request["returnUrl"]))
    {
        <a class="btn btn-sm btn-secondary" href="@Url.Action("Index")"><i class="fas fa-arrow-left"></i> Back</a>
    }
    else
    {
        <a class="btn btn-sm btn-secondary" href="@Request["returnUrl"]"><i class="fas fa-arrow-left"></i> Back</a>
    }
}

<h2>Create New Cage Location</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.Description, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Description)
                @Html.ValidationMessageFor(model => model.Description)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Room, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Room_Id", null, "", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Room_Id)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Create" class="btn  btn-outline-dark" />
            </div>
        </div>
    </div>
}

@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
}