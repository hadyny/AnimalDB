@model AnimalDB.Repo.Entities.Animal

@section BackNav {
    <a class="btn btn-sm btn-secondary" href="@Url.Action("Index", "Culled")"><i class="fas fa-arrow-left"></i> Back</a>
}

<h3>Are you sure you want to resurrect this animal?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.UniqueAnimalId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UniqueAnimalId)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Investigator)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Investigator.FirstName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Room)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Room.Description)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DeathDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DeathDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CauseOfDeath)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CauseOfDeath)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            @Html.ActionLink("Cancel", "Index", "Culled", new { id = Model.DeathDate.Value.Year }, new { @class = "btn btn-outline-dark" })
            <input type="submit" value="Resurrect" class="btn btn-outline-danger" />
        </div>
    }
</div>
