<script>
    
    $('#StockAnimal').val('@Model.StockAnimal.ToString().ToLower()');
    
    $('form').find('input').keypress(function (e) {
        if (e.which === 13) 
        {
            var els = $('input,select');
            var next = els.eq(els.index(this) + 1);
            next.focus();
            return false;
        }
    });
</script>
