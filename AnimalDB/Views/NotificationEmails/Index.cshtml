@model IEnumerable<AnimalDB.Repo.Entities.NotificationEmail>

@section BackNav {
    <a class="btn btn-sm btn-secondary" href="@Url.Action("Index", "Admin")"><i class="fas fa-arrow-left"></i> Back to Admin</a>
}

<h2>Notification Emails</h2>
<h3>Notifications for injections and medication will be sent to these addresses</h3>

<p>
    @Html.ActionLink("Add New Email Address", "Create", null, new { @class = "btn  btn-outline-dark" })
</p>
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th></th>
    </tr>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn  btn-outline-dark" })
            @Html.ActionLink("X", "Delete", new { id = item.Id }, new { @class = "btn  btn-outline-danger" })
        </td>
    </tr>
}
</table>
