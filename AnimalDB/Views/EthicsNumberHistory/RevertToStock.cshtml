@model AnimalDB.Repo.Entities.Animal

<h3>
    @Html.ActionLink("Back", "Index", new { id = Model.Id }, new { @class = "btn btn-outline-dark" })
</h3>
<h2>Revert Animal to Stock</h2>

<h3>Are you sure you want to remove all AUP numbers and revert this animal to stock?</h3>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.UniqueAnimalId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UniqueAnimalId)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Investigator)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Investigator.FullName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Room)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Room.Description)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            @Html.ActionLink("Cancel", "Index", new { id = Model.Id }, new { @class = "btn btn-outline-dark" })
            <input type="submit" value="Revert" class="btn btn-danger" />
        </div>
    }
</div>