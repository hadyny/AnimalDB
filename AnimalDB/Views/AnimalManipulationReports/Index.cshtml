@model IEnumerable<AnimalDB.Repo.Entities.AnimalManipulationReport>

@section BackNav {
    <a class="btn btn-sm btn-secondary" href="@Url.Action("Index", "Admin")"><i class="fas fa-arrow-left"></i> Back to Admin</a>
}

<h2>Animal Manipulation Figures</h2>

<p>
    @Html.ActionLink("Create New Report", "SelectEthics", null, new { @class = "btn  btn-outline-dark" })
</p>
<table class="table table-hover">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Timestamp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Investigator)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProtocolNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PeriodFrom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PeriodTo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Timestamp)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Investigator.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProtocolNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PeriodFrom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PeriodTo)
                </td>
                <td>
                    @Html.ActionLink("View / Edit", "Edit", new { id = item.Id, Ethics_Id = item.Ethics_Id }, new { @class = "btn btn-outline-dark" })
                    @Html.ActionLink("X", "Delete", new { id = item.Id }, new { @class = "btn btn-outline-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>
